= javascript_include_tag 'highcharts', :debug => true
= javascript_include_tag 'aplication', :debug => true

%p
  Число упоминанаий всего:
  = @count_all_mention

Компании:
%ul
  -@companies.each do |company|
    %li
      =link_to company.name, company
      (
      = CompanyMention.get_mentions_by_company company
      )

- count_mention  = @all_mention_in_days.values
- date_mentions = @all_mention_in_days.keys


#container

:javascript
  $(function () {
    var chart;
    var company_name = "Все статьи"
    var company_data = [
    #{ 
        count_mention.map{ |i| "#{i}" }.join ', '
    }]
    
    

    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'area'
            },
            title: {
                text: 'График упоминания - '+ company_name + ''
            },
            subtitle: {
                text: 'Source: <a href="http://ya.ru">'+
                    'Подтекст</a>'
            },
            xAxis: {
                categories: [
                "#{
                    date_mentions.map{ |i| "#{i}" }.join '", "'

                }"]
                
            },
            yAxis: {
                title: {
                    text: 'Число упоминаний'
                },
                labels: {
                    formatter: function() {
                        return this.value;
                    }
                }
            },
            tooltip: {
                formatter: function() {
                    return this.series.name +' produced <b>'+
                        Highcharts.numberFormat(this.y, 0) +'</b><br/>warheads in '+ this.x;
                }
            },
            plotOptions: {
                area: {
                    pointStart: 0,
                    marker: {
                        enabled: false,
                        symbol: 'circle',
                        radius: 2,
                        states: {
                            hover: {
                                enabled: true
                            }
                        }
                    }
                }
            },
            series: [{
                name: company_name,
                data: company_data 
                     
            }]
        });
    });  
  });  
